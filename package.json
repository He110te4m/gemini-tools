{
  "name": "gemini-tools",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "description": "Gemini AI 相关命令行工具集合",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/gemini-tools#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gemini-tools.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/gemini-tools/issues"
  },
  "keywords": [
    "gemini",
    "ai",
    "cli",
    "tools",
    "google",
    "chat",
    "code",
    "shell",
    "zx"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gemini-tools": "./dist/bin/index.js"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=7.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/bin/index.ts -- -m chat -p 'Hello, how are you?'",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "release": "bumpp",
    "release:patch": "bumpp --patch",
    "release:minor": "bumpp --minor",
    "release:major": "bumpp --major"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "ora": "^8.2.0",
    "zod": "^4.0.10",
    "zx": "^8.7.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.0.0",
    "bumpp": "^10.2.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "pnpm": "^10.13.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    "*.{test,spec}.{js,ts}": [
      "vitest run --reporter=verbose"
    ]
  },
  "bumpp": {
    "files": [
      "package.json"
    ],
    "commit": "chore: release v{{version}}",
    "tag": "v{{version}}",
    "push": true
  }
}
